<section class="main main_open">
  <article class="chat">
    <%= form_for Comment.new do |f| %>
      <%= f.text_area :body %>
      <%= f.hidden_field :song_room_song_version_id %>
      <%= f.submit "Send Message" %>
    <% end %>
  </article>
  
  <aside id="fast-chat">
    <% if @comments %>
      <% @comments.each do |comment| %>
        <%= comment.body %>
      <% end %>
    <% else %>
      <% @song_comments.each do |comment| %>
        <%= comment.body %>
      <% end %> 
    <% end %>
  </aside>
</section>