<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label :name %><br />
  	<%= f.text_field :name %></div>

  <div><%= f.label :username %><br />
  	<%= f.text_field :username %></div>

  	<div><%= f.label :musical_title %><br />
  	<%= f.text_field :musical_title %></div>

  	<div><%= f.label :music_preference_1 %><br />
  	<%= f.text_field :music_preference_1 %></div>

  	<div><%= f.label :music_preference_2 %><br />
  	<%= f.text_field :music_preference_2 %></div>

  	<div><%= f.label :instrument_1 %><br />
  	<%= f.text_field :instrument_1 %></div>

  	<div><%= f.label :instrument_2 %><br />
  	<%= f.text_field :instrument_2 %></div>

  	<div><%= f.label :location %><br />
  	<%= f.text_field :location %></div>

  	<div><%= f.label :avatar %><br />
  	<%= f.file_field :avatar %></div>


  

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
